auto <%= @bridge_interface %>
iface <%= @bridge_interface %> inet static
  address <%= @address %>
  network <%= @network %>
  netmask <%= @netmask %>
  broadcast <%= @broadcasst %>
  gateway <%= @gateway %>
  bridge_ports <%= @pub_interface %>
	bridge_stp off
	bridge_fd 0
	bridge_maxwait 0
